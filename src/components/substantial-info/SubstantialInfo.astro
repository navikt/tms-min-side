---
import { Alert } from "@navikt/ds-react/cjs/alert/Alert.js";
import { Heading } from "@navikt/ds-react/cjs/typography/Heading.js";
import { Link } from "@navikt/ds-react/cjs/link/Link.js";
import { text } from "@language/substantialInfo";
import type { Language } from "@language/language";
import { BodyShort } from "@navikt/ds-react";

interface Props {
  language: Language;
}

const { language } = Astro.props;

const isSubstantial: boolean = Astro.locals.isSubstantial;
---

{
  isSubstantial && (
    <Alert variant="info">
      <Heading level="2" size="xsmall">
        {text.heading[language]}
      </Heading>
      <BodyShort>{text.info[language]}</BodyShort>
      <Link href="/minside/oauth2/login?level=idporten-loa-high">{text.link[language]}</Link>
    </Alert>
  )
}
